<Hds::Modal @color="critical" @onClose={{@close}} as |M|>
  <M.Header>
    Archive document?
  </M.Header>
  <M.Body>
    Are you sure you want to archive this document?

    {{#if @errorIsShown}}
      <ModalAlertError
        @onDismiss={{@dismissError}}
        @title={{@errorTitle}}
        @description={{@errorDescription}}
      />
    {{/if}}
  </M.Body>
  <M.Footer as |F|>
    <Hds::ButtonSet>
      <Hds::Button
        @text={{if this.isArchiving "Archiving..." "Yes, archive"}}
        @color="critical"
        @icon={{if this.isArchiving "loading" "archive"}}
        disabled={{this.isArchiving}}
        {{on "click" (perform this.archiveDocument)}}
      />
      <Hds::Button
        @text="Cancel"
        @color="secondary"
        disabled={{this.isArchiving}}
        {{on "click" F.close}}
      />
    </Hds::ButtonSet>
  </M.Footer>
</Hds::Modal>
