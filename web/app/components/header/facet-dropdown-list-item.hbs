<li role="none" data-test-facet-dropdown-menu-item>
  <LinkTo
    {{did-insert this.registerElement}}
    {{on "mouseenter" this.onMouseenter}}
    {{on "click" this.delayedCloseDropdown}}
    role={{@role}}
    aria-selected={{this.isFocused}}
    tabindex="-1"
    aria-checked={{@selected}}
    @route={{this.currentRouteName}}
    @query={{or this.sortByHash (get-facet-query-hash @label @value @selected)}}
    class="facet-dropdown-menu-item-link {{if this.isFocused 'is-focused'}}"
  >
    {{#if this.sortByHash}}
      <FlightIcon @name={{if (eq @value "Newest") "sort-desc" "sort-asc"}} class="sort-icon" />
    {{else}}
      <FlightIcon @name="check" class="check {{if @selected "visible" "invisible"}}" />
    {{/if}}
    <div class="w-full flex justify-between overflow-hidden">
      <span data-test-facet-dropdown-list-item-value>
        {{@value}}
      </span>
      {{#unless this.sortByHash}}
        <Hds::BadgeCount
          @text={{@count}}
          class="opacity-75 ml-8 shrink-0"
          @size="small"
        />
      {{/unless}}
    </div>
  </LinkTo>
</li>
